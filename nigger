<script>
  // update tahun otomatis
  document.getElementById('year').innerText = new Date().getFullYear();

  // SHOW/HIDE HALAMAN
  function showHome() {
    document.getElementById("home-section").style.display = "block";
    document.getElementById("website-options").style.display = "none";
    document.getElementById("packages-section").style.display = "none";
    window.scrollTo({ top: 0, behavior: "smooth" });
  }

  function showWebsiteOptions() {
    document.getElementById("home-section").style.display = "none";
    document.getElementById("website-options").style.display = "block";
    document.getElementById("packages-section").style.display = "none";
    window.scrollTo({ top: 0, behavior: "smooth" });
  }

  function showPackages() {
    document.getElementById("home-section").style.display = "none";
    document.getElementById("website-options").style.display = "none";
    document.getElementById("packages-section").style.display = "block";
    window.scrollTo({ top: 0, behavior: "smooth" });
  }


/* ====================== */
/*   POPUP DETAIL WEBSITE */
/* ====================== */
const popupBg = document.getElementById("popupBg");
const popupTitle = document.getElementById("popupTitle");
const popupDesc = document.getElementById("popupDesc");
const popupWA = document.getElementById("popupWA");

function openPopup(title, desc) {
  popupTitle.innerText = title;
  popupDesc.innerText = desc;

  popupWA.href =
    `https://wa.me/6281234567890?text=Halo,%20saya%20ingin%20memesan%20${encodeURIComponent(title)}%20dari%20GrowMind`;

  popupBg.style.display = "flex";
}

function closePopup() {
  popupBg.style.display = "none";
}

/* ====================== */
/*   CARD CLICK EVENT     */
/* ====================== */
document.querySelectorAll("#website-options .service").forEach((card) => {
  card.addEventListener("click", () => {
    const title = card.querySelector("h3").innerText;
    const desc = card.querySelector("p").innerText;
    openPopup(title, desc);
  });
});
</script>

